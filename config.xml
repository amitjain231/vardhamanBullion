<?xml version="1.0" encoding="UTF-8" ?>
    <widget xmlns = "http://www.w3.org/ns/widgets"
        xmlns:gap = "http://phonegap.com/ns/1.0"
        id        = "com.phonegap.vardhamanbullion.live"
        versionCode="10002"
        android-versionCode="10002" 
        version   = "1.0.0">


    <name>Vardhaman Bullion</name>

    <description>
        Vardhaman Bullion is a renowned company providing Bullion, Jewellery (Silver and Gold) in India. Established in 
        Jan 2000, it has grown leaps and bounds and is now a leading company providing competitive rates and impeccable 
        service
    </description>

    <author href="http://www.magicbul.com" email="amitjain231@gmail.com">
        Amit kumar Jain
    </author>

	
	<gap:platform name="android" />
	<gap:plugin name='cordova-plugin-whitelist' spec='1.0.0' source='npm' />
	<access origin="*" />	
	<allow-navigation href="http://*/*" />
	<allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
	
	
	<!-- ANDROID * ANDROID * ANDROID -->
	<preference name="SplashScreen" value="screen" />	
	<preference name="SplashScreenDelay" value="3000"/>	

	<icon src="icon.png" platform="android" density="ldpi" />
	<icon src="icon.png" platform="android" density="mdpi" />
	<icon src="icon.png" platform="android" density="hdpi" />
	<icon src="icon.png" platform="android" density="xhdpi" />

	
	
	<splash src="splash.png" platform="android" density="port-ldpi" />
	<splash src="splash.png" platform="android" density="land-ldpi" />
	<splash src="splash.png" platform="android" density="port-mdpi" />
	<splash src="splash.png" platform="android" density="land-mdpi" />
	<splash src="splash.png" platform="android" density="port-hdpi" />
	<splash src="splash.png" platform="android" density="land-hdpi" />
	<splash src="splash.png" platform="android" density="port-xhdpi" />
	<splash src="splash.png" platform="android" density="land-xhdpi" />
	<splash src="splash.png" platform="android" density="port-xxhdpi" />
	<splash src="splash.png" platform="android" density="land-xxhdpi" />
	
	

	<!-- Preferences Permissions, Phonegap version to build -->
	<preference name="permissions" value="none"/>
	<preference name="phonegap-version" value="cli-7.0.1" />
	<preference name="android-targetSdkVersion" value="26"/>
	
	<!-- Required only Notification permission -->
	<feature name="http://api.phonegap.com/1.0/notification"/>

</widget>